<?xml version="1.1" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aaron.stardate">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:label="@string/app_name"
        android:icon="@mipmap/launcher"
        android:roundIcon="@mipmap/launcher_round"
        android:theme="@style/AppTheme">

        <receiver android:name=".StarDateAppWidget" android:label="Widget 1">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/stardate_app_widget_info"/>
        </receiver>

        <receiver android:name=".DeciWatchAppWidget" android:label="Widget 2" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/deciwatch_app_widget_info" />
        </receiver>

    </application>

</manifest>